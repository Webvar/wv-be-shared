{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",  // Change this from "CommonJS" to "ESNext" or "ES6"
    "allowJs": true,
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
